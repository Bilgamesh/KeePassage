{
  "name": "keepassage",
  "version": "0.9.2",
  "type": "module",
  "engines": {
    "node": "~22"
  },
  "scripts": {
    "format": "biome check --write",
    "build": "tsc && vite build --mode app && vite build --mode daemon",
    "start": "node ./scripts/yode.ts build/index.cjs",
    "dev:prepare": "rimraf build && shx mkdir build && shx touch build/index.cjs",
    "dev": "npm run dev:prepare && concurrently --names TS,VITE,VITE:PCSC,YODE --prefix-colors cyan,magenta,magenta,green npm:watch:tsc npm:watch:build:app npm:watch:build:daemon npm:watch:yode",
    "watch:tsc": "tsc --watch",
    "watch:build:app": "vite build --mode app --watch",
    "watch:build:daemon": "vite build --mode daemon --watch",
    "watch:yode": "node scripts/yode.ts --watch build/index.cjs",
    "release": "rimraf release && npm run build && node scripts/release.ts"
  },
  "dependencies": {
    "@scure/base": "^2.0.0",
    "@solid-primitives/i18n": "^2.2.1",
    "age-encryption": "^0.2.4",
    "gui": "^0.15.6",
    "libsodium-wrappers": "^0.7.15",
    "pcsc-mini": "^0.1.3",
    "qrcode": "^1.5.4",
    "solid-js": "^1.9.11",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "^2.0.8",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "concurrently": "^9.2.1",
    "fetch-yode": "^1.1.3",
    "get-node": "^15.0.4",
    "rimraf": "^6.1.2",
    "shx": "^0.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-solid": "^2.11.10",
    "yackage": "^0.9.2"
  },
  "overrides": {
    "yackage": {
      "tar": "^7.5.6"
    }
  }
}
